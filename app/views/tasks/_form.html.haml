= semantic_form_for(@task) do |f|
  - if @task.errors.any? 
    #error_explanation
      %h2= pluralize(@task.errors.count, "error") + "prohibited this task from being saved:"

      %ul
        - @task.errors.full_messages.each do |message| 
          %li= message

  = f.inputs do
    =f.inputs :project, :name
    =f.inputs :is_billable
  .actions
  =f.actions do
    = f.action :submit, as: :button, class: "btn btn-default"
